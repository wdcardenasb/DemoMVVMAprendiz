<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DemoMVVMAprendiz.Vista.DetalleAprendiz"
             Title="Detalle del Aprendiz">
    
    <ContentPage.Content>
        <StackLayout Margin=" 10">
            <Label Text="Nombre"/>
            <Entry Text="{Binding Nombre}"/>
            <Label Text="Apellido"/>
            <Entry Text="{Binding Apellido}"/>
            <Label Text="Programa"/>
            <Entry Text="{Binding Programa}"/>
            <Label Text="Ficha"/>
            <Entry Text="{Binding Ficha}"/>
            <Label Text="Promedio"/>
            <Entry Text="{Binding Promedio}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>